<?xml version="1.0" encoding="utf-8" ?>
<bnb:BottomBarPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:pages="clr-namespace:OnymousMobile.Views"
            xmlns:bnb="clr-namespace:BottomBar.XamarinForms;assembly=BottomBar.XamarinForms"
            x:Class="OnymousMobile.Views.MainPage"
            BindingContext="{Binding Main, Source={StaticResource Locator}}"
            BarBackgroundColor="#1B2F1B">
    <ContentPage
        Title="Perfil"
        Icon="ic_person_white.png"
        bnb:BottomBarPageExtensions.TabColor="DodgerBlue">
        <Label
            VerticalOptions="Center"
            HorizontalTextAlignment="Center"
            Text="Perfil"
            FontSize="Large"/>
    </ContentPage>
    
    <ContentPage
        Title="Buscar"
        Icon="ic_search_white.png"
        bnb:BottomBarPageExtensions.TabColor="Goldenrod">
        <Label
            VerticalOptions="Center"
            HorizontalTextAlignment="Center"
            Text="Buscar"
            FontSize="Large"/>
    </ContentPage>
    
    <ContentPage
        Title="Buzón"
        Icon="ic_message_white.png"
        bnb:BottomBarPageExtensions.TabColor="Crimson">
        <Label
            VerticalOptions="Center"
            HorizontalTextAlignment="Center"
            Text="Buzón"
            FontSize="Large"/>
    </ContentPage>
    
    <!-- Pages -->
    <!--<TabbedPage.Children>
        <pages:MyProfilePage/>
        <pages:SearchPage/>
        <pages:QuestionPage/>
    </TabbedPage.Children>-->
</bnb:BottomBarPage>