<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:caro="clr-namespace:CarouselView.FormsPlugin.Abstractions;assembly=CarouselView.FormsPlugin.Abstractions"
             x:Class="OnymousMobile.Views.CreateAccountPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             BackgroundImage="FondoAppVerde">
    <ContentPage.Content>

        <StackLayout
            BindingContext="{Binding CreateAccountVM}">
            <caro:CarouselViewControl
                x:Name="carousel"
                IsSwipeEnabled="False"
                Orientation="Horizontal"
                Position="{Binding CarouselPosition, Mode=TwoWay}"
                ShowIndicators="True"
                CurrentPageIndicatorTintColor="White"
                IndicatorsTintColor="Black"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                PositionSelected="Carousel_PositionSelected">
            </caro:CarouselViewControl>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>